<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<fx:root stylesheets="@../../../resources/styling/generalStyle.css" type="StackPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.homescreen.FXMLHomeScreenController">
    <children>
        <ImageView fitHeight="720.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../resources/assets/icons/hsBackground.jpg" />
            </image>
        </ImageView>
        <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="720.0">
            <bottom>
                <HBox BorderPane.alignment="CENTER_LEFT">
                    <children>
                        <ImageView fx:id="connectionIndicatorImageView" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </ImageView>
                        <Label fx:id="connectionLabel" alignment="CENTER" styleClass="bigLabel" stylesheets="@../../../resources/styling/generalStyle.css" text="Online" />
                    </children>
                    <opaqueInsets>
                        <Insets left="20.0" />
                    </opaqueInsets>
                </HBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="chatBtn" mnemonicParsing="false" onAction="#openChat" styleClass="bigBtn" stylesheets="@../../../resources/styling/generalStyle.css" text="Chat">
                    <HBox.margin>
                        <Insets bottom="20.0" right="20.0" />
                    </HBox.margin>
                </Button>
            </bottom>
            <top>
                <HBox fx:id="header" spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="settingsBtn" mnemonicParsing="false" onAction="#openSettingsScreen" styleClass="bigBtn" stylesheets="@../../../resources/styling/generalStyle.css" text="Settings" HBox.hgrow="NEVER" />
                        <Button fx:id="exitBtn" layoutX="645.0" layoutY="30.0" minWidth="31.0" mnemonicParsing="false" onAction="#exitApp" prefHeight="32.0" prefWidth="31.0" styleClass="bigBtn" stylesheets="@../../../resources/styling/generalStyle.css" text="X" />
                    </children>
                    <padding>
                        <Insets right="20.0" top="20.0" />
                    </padding>
                </HBox>
            </top>
            <center>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox alignment="CENTER" layoutX="117.0" layoutY="71.0" prefHeight="368.0" prefWidth="274.0" spacing="20.0">
                            <!-- Additional children/elements here -->
                        </VBox>
                    </children>
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                </AnchorPane>
            </center>
            <left>
                <VBox alignment="CENTER" BorderPane.alignment="BOTTOM_LEFT">
                    <children>
                        <ImageView fx:id="profileImageView" fitHeight="67.0" fitWidth="89.0" pickOnBounds="true" preserveRatio="true" />
                    </children>
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </VBox>
            </left>
        </BorderPane>
    </children>
</fx:root>
