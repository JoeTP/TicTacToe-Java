<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" prefHeight="125.0" prefWidth="350.0" spacing="5.0" styleClass="rect" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.homescreen.AccountInfoController">
   <children>
      <Label fx:id="nameLabel" prefHeight="28.0" prefWidth="157.0" text="Name">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <HBox spacing="5.0">
         <children>
            <ImageView fx:id="profileImageView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </ImageView>
            <HBox alignment="CENTER" prefHeight="45.0" prefWidth="163.0" spacing="40.0" HBox.hgrow="ALWAYS">
               <children>
                  <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Rank" />
                        <Label fx:id="rankStarLabel" layoutX="23.0" layoutY="10.0" text="â˜…" />
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Won" />
                        <Label fx:id="wonGamesLabel" layoutX="23.0" layoutY="10.0" />
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Games" />
                        <Label fx:id="playedGamesLabel" layoutX="23.0" layoutY="10.0" />
                     </children>
                  </VBox>
               </children>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </HBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="historyButton" mnemonicParsing="false" onAction="#handleHistoryButton" styleClass="buttons" text="History">
               <graphic>
                  <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../resources/assets/icons/history.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogoutButton" styleClass="buttons" text="Logout">
               <graphic>
                  <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../resources/assets/icons/logout.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</VBox>
